generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Арендатор (Владелец заведения)
model Tenant {
  id           String   @id @default(cuid())
  slug         String   @unique
  name         String
  logoUrl      String?
  primaryColor String   @default("#000000")
  
  categories   Category[]
  products     Product[]
  orders       Order[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 2. Категории
model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String?   // Сделали опциональным, чтобы не ломать старые записи
  
  // Связь с товарами
  products Product[]

  // Связь с арендатором (делаем опциональной для совместимости)
  tenantId String?
  tenant   Tenant?    @relation(fields: [tenantId], references: [id])
}

// 3. Товары
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int      // Используем Int для цены (в копейках или рублях)
  
  // !!! ВОТ ЭТИ ПОЛЯ, КОТОРЫХ НЕ ХВАТАЛО !!!
  weight      String?  // Вес (например, "350 г")
  image       String?  // Ссылка на фото
  createdAt   DateTime @default(now()) // Дата создания (для сортировки)
  
  isAvailable Boolean  @default(true)
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  tenantId    String?
  tenant      Tenant?   @relation(fields: [tenantId], references: [id])
}

// 4. Заказы
model Order {
  id            String      @id @default(cuid())
  status        String      @default("PENDING")
  totalAmount   Int
  
  customerName  String
  customerPhone String
  address       String?
  
  tenantId      String?
  tenant        Tenant?      @relation(fields: [tenantId], references: [id])
  
  createdAt     DateTime    @default(now())
}