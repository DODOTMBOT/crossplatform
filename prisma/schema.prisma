generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Арендатор
model Tenant {
  id           String   @id @default(cuid())
  slug         String   @unique
  name         String
  logoUrl      String?
  primaryColor String   @default("#000000")
  isActive     Boolean  @default(true)
  
  users        User[]
  categories   Category[]
  products     Product[]
  orders       Order[]
  banners      Banner[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 2. Пользователи
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN") 
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
}

// 3. Категории
model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String?   
  order    Int       @default(0)
  tenantId String?
  tenant   Tenant?    @relation(fields: [tenantId], references: [id])
  products Product[]
}

// 4. Товары
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int      // Цена в рублях
  
  // --- НОВЫЕ ПОЛЯ ---
  // 1. Признак расчета: "COMMODITY" (Товар), "EXCISE" (Подакциз), "SERVICE" (Услуга)
  paymentSubject String @default("COMMODITY") 

  // 2. Вес ИЛИ Объем
  weight        String?  // "300 г"
  volume        String?  // "0.5 л"

  // 3. Медиа
  image         String?  // Ссылка на фото (загруженное)
  video         String?  // Ссылка на видео (YouTube/URL)

  // 4. КБЖУ
  calories      Float? 
  proteins      Float?
  fats          Float?
  carbohydrates Float?

  // Статусы
  isAvailable Boolean  @default(true)
  isArchived  Boolean  @default(false)
  sortIndex   Int      @default(0)
  badge       String?
  sku           String?
  iikoId        String?
  isMarked      Boolean @default(false)

  // Связи
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  tenantId    String?
  tenant      Tenant?   @relation(fields: [tenantId], references: [id])
  modifierGroups ModifierGroup[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 5. Группы модификаторов
model ModifierGroup {
  id           String   @id @default(cuid())
  name         String
  minSelection Int      @default(0)
  maxSelection Int      @default(1)
  productId    String
  product      Product  @relation(fields: [productId], references: [id])
  modifiers    Modifier[]
}

// 6. Модификаторы
model Modifier {
  id              String        @id @default(cuid())
  name            String
  price           Int           @default(0)
  modifierGroupId String
  modifierGroup   ModifierGroup @relation(fields: [modifierGroupId], references: [id])
}

// 7. Заказы
model Order {
  id            String      @id @default(cuid())
  status        String      @default("PENDING")
  totalAmount   Int
  customerName  String
  customerPhone String
  address       String?
  tenantId      String?
  tenant        Tenant?      @relation(fields: [tenantId], references: [id])
  items         OrderItem[]
  createdAt     DateTime    @default(now())
}

// 8. Позиции заказа
model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id])
  productName String
  quantity    Int
  price       Int
  modifiers   String?
}

// 9. Баннеры
model Banner {
  id        String   @id @default(cuid())
  image     String
  link      String?
  sortIndex Int      @default(0)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
}