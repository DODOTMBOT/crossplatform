generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Главная модель - Арендатор (Кафе/Пиццерия)
model Tenant {
  id           String   @id @default(cuid())
  slug         String   @unique // Например: 'vibe-coffee' или 'pizza-hit'
  name         String
  logoUrl      String?
  primaryColor String   @default("#000000") // HEX код бренда
  isActive     Boolean  @default(true)
  
  // Контент страниц (White Label)
  aboutTitle   String?
  aboutText    String?
  address      String?
  phone        String?
  
  // Связи
  categories   Category[]
  products     Product[]
  orders       Order[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 2. Категории меню (Пицца, Напитки и т.д.)
model Category {
  id       String    @id @default(cuid())
  name     String
  order    Int       @default(0) // Для сортировки
  
  tenant   Tenant    @relation(fields: [tenantId], references: [id])
  tenantId String
  products Product[]
}

// 3. Товары
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  isAvailable Boolean  @default(true)
  badge       String?  // Например: 'NEW', 'HIT'
  
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  tenantId    String
  
  modifierGroups ModifierGroup[]
}

// 4. Модификаторы (Доп. сыр, размер и т.д.)
model ModifierGroup {
  id           String   @id @default(cuid())
  name         String   // Например: "Выберите соус"
  minSelection Int      @default(0)
  maxSelection Int      @default(1)
  
  product      Product  @relation(fields: [productId], references: [id])
  productId    String
  modifiers    Modifier[]
}

model Modifier {
  id              String        @id @default(cuid())
  name            String
  price           Float         @default(0)
  modifierGroup   ModifierGroup @relation(fields: [modifierGroupId], references: [id])
  modifierGroupId String
}

// 5. Заказы
model Order {
  id            String   @id @default(cuid())
  status        String   @default("PENDING") // PENDING, PAID, CANCELLED
  totalAmount   Float
  
  customerName  String
  customerPhone String
  address       String?
  
  tenant        Tenant   @relation(fields: [tenantId], references: [id])
  tenantId      String
  
  items         OrderItem[]
  createdAt     DateTime @default(now())
}

model OrderItem {
  id        String @id @default(cuid())
  order     Order  @relation(fields: [orderId], references: [id])
  orderId   String
  
  productName String
  quantity    Int
  price       Float
  modifiers   String? // Можно хранить строкой выбранные допы
}