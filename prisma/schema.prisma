generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Арендатор (Владелец заведения)
model Tenant {
  id           String   @id @default(cuid())
  slug         String   @unique
  name         String
  logoUrl      String?
  primaryColor String   @default("#000000")
  isActive     Boolean  @default(true)
  
  categories   Category[]
  products     Product[]
  orders       Order[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 2. Категории
model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String?   
  order    Int       @default(0)
  
  tenantId String?
  tenant   Tenant?    @relation(fields: [tenantId], references: [id])
  
  products Product[]
}

// 3. Товары
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int      // Цена в рублях
  
  // --- НОВЫЕ ПОЛЯ ---
  isAvailable Boolean  @default(true) // Активен
  isArchived  Boolean  @default(false) // В архиве
  sortIndex   Int      @default(0)     // Сортировка
  badge       String?  // Хит, Новинка и т.д.

  weight        String?  // Вес (300 г)
  image         String?
  
  // КБЖУ
  calories      Float? 
  proteins      Float?
  fats          Float?
  carbohydrates Float?

  // Технические
  sku           String? // Артикул
  iikoId        String? // ID в iiko
  isMarked      Boolean @default(false) // Честный знак
  // ------------------

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  tenantId    String?
  tenant      Tenant?   @relation(fields: [tenantId], references: [id])
  
  modifierGroups ModifierGroup[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 4. Группы модификаторов
model ModifierGroup {
  id           String   @id @default(cuid())
  name         String
  minSelection Int      @default(0)
  maxSelection Int      @default(1)
  
  productId    String
  product      Product  @relation(fields: [productId], references: [id])
  
  modifiers    Modifier[]
}

// 5. Модификаторы
model Modifier {
  id              String        @id @default(cuid())
  name            String
  price           Int           @default(0)
  
  modifierGroupId String
  modifierGroup   ModifierGroup @relation(fields: [modifierGroupId], references: [id])
}

// 6. Заказы
model Order {
  id            String      @id @default(cuid())
  status        String      @default("PENDING")
  totalAmount   Int
  
  customerName  String
  customerPhone String
  address       String?
  
  tenantId      String?
  tenant        Tenant?      @relation(fields: [tenantId], references: [id])
  
  items         OrderItem[]
  createdAt     DateTime    @default(now())
}

// 7. Позиции заказа
model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id])
  
  productName String
  quantity    Int
  price       Int
  modifiers   String?
}