generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Арендатор (Владелец заведения)
model Tenant {
  id           String   @id @default(cuid())
  slug         String   @unique
  name         String
  logoUrl      String?
  
  // Фото шапки
  headerImage  String?  
  
  // Настройки шапки
  headerStyle  String   @default("HERO")     // "HERO" (Баннер) или "SIMPLE" (Лого + Цвет)
  headerColor  String   @default("#1C1C1C")  // Цвет фона для режима SIMPLE

  primaryColor String   @default("#000000")
  isActive     Boolean  @default(true)
  
  // Связи
  users        User[]
  categories   Category[]
  products     Product[]
  orders       Order[]
  banners      Banner[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 2. Пользователи
model User {
  id        String   @id @default(cuid())
  
  email     String?
  password  String?
  name      String?
  role      String   @default("USER") 
  
  telegramId String? 

  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  
  createdAt DateTime @default(now())

  @@unique([email, tenantId])
  @@unique([telegramId, tenantId])
}

// 3. Категории
model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String?   
  order    Int       @default(0)
  tenantId String?
  tenant   Tenant?    @relation(fields: [tenantId], references: [id])
  products Product[]
}

// 4. Товары
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int      // Базовая цена (или минимальная, если есть размеры)
  
  paymentSubject String @default("COMMODITY") 

  weight        String?  
  volume        String?  

  image         String?  
  video         String?  

  calories      Float? 
  proteins      Float?
  fats          Float?
  carbohydrates Float?

  isAvailable Boolean  @default(true)
  isArchived  Boolean  @default(false)
  sortIndex   Int      @default(0)
  badge       String?
  sku         String?
  iikoId      String?
  isMarked    Boolean @default(false)

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  tenantId    String?
  tenant      Tenant?   @relation(fields: [tenantId], references: [id])
  
  modifierGroups ModifierGroup[]
  
  // НОВОЕ ПОЛЕ: Размеры
  sizes       ProductSize[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// НОВАЯ МОДЕЛЬ: Размеры товара
model ProductSize {
  id        String  @id @default(cuid())
  name      String  // Например: "25 см", "30 см", "1 шт", "500 г"
  price     Int     // Цена за этот размер
  
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// 5. Группы модификаторов
model ModifierGroup {
  id           String   @id @default(cuid())
  name         String
  minSelection Int      @default(0)
  maxSelection Int      @default(1)
  productId    String
  product      Product  @relation(fields: [productId], references: [id])
  modifiers    Modifier[]
}

// 6. Модификаторы
model Modifier {
  id              String        @id @default(cuid())
  name            String
  price           Int           @default(0)
  modifierGroupId String
  modifierGroup   ModifierGroup @relation(fields: [modifierGroupId], references: [id])
}

// 7. Заказы
model Order {
  id            String      @id @default(cuid())
  status        String      @default("PENDING")
  totalAmount   Int
  customerName  String
  customerPhone String
  address       String?
  tenantId      String?
  tenant        Tenant?      @relation(fields: [tenantId], references: [id])
  items         OrderItem[]
  createdAt     DateTime    @default(now())
}

// 8. Позиции заказа
model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id])
  productName String
  quantity    Int
  price       Int
  modifiers   String?
  // Можно добавить поле variantName, если нужно сохранять размер в заказе
}

// 9. Баннеры
model Banner {
  id        String   @id @default(cuid())
  image     String
  link      String?
  sortIndex Int      @default(0)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
}