generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Арендатор (Владелец заведения)
model Tenant {
  id           String   @id @default(cuid())
  slug         String   @unique
  name         String
  logoUrl      String?
  primaryColor String   @default("#000000")
  isActive     Boolean  @default(true)
  
  // Связи
  users        User[]   // Администраторы ресторана
  categories   Category[]
  products     Product[]
  orders       Order[]
  banners      Banner[] // Баннеры ресторана
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 2. Пользователи (Администраторы)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Хэшированный пароль
  name      String?
  
  // Роль: "ADMIN" (ресторатор) или "SUPERADMIN" (владелец платформы)
  role      String   @default("ADMIN") 

  // Привязка к ресторану (если null — значит это Супер-Админ платформы)
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])

  createdAt DateTime @default(now())
}

// 3. Категории
model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String?   
  order    Int       @default(0)
  
  tenantId String?
  tenant   Tenant?    @relation(fields: [tenantId], references: [id])
  
  products Product[]
}

// 4. Товары
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int      // Цена в рублях
  
  // Статусы
  isAvailable Boolean  @default(true) // Активен
  isArchived  Boolean  @default(false) // В архиве
  sortIndex   Int      @default(0)     // Сортировка
  badge       String?  // Хит, Новинка и т.д.

  // Характеристики
  weight        String?  // Вес (300 г)
  image         String?
  
  // КБЖУ
  calories      Float? 
  proteins      Float?
  fats          Float?
  carbohydrates Float?

  // Технические
  sku           String? // Артикул
  iikoId        String? // ID в iiko
  isMarked      Boolean @default(false) // Честный знак

  // Связи
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  tenantId    String?
  tenant      Tenant?   @relation(fields: [tenantId], references: [id])
  
  modifierGroups ModifierGroup[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 5. Группы модификаторов
model ModifierGroup {
  id           String   @id @default(cuid())
  name         String
  minSelection Int      @default(0)
  maxSelection Int      @default(1)
  
  productId    String
  product      Product  @relation(fields: [productId], references: [id])
  
  modifiers    Modifier[]
}

// 6. Модификаторы
model Modifier {
  id              String        @id @default(cuid())
  name            String
  price           Int           @default(0)
  
  modifierGroupId String
  modifierGroup   ModifierGroup @relation(fields: [modifierGroupId], references: [id])
}

// 7. Заказы
model Order {
  id            String      @id @default(cuid())
  status        String      @default("PENDING")
  totalAmount   Int
  
  customerName  String
  customerPhone String
  address       String?
  
  tenantId      String?
  tenant        Tenant?      @relation(fields: [tenantId], references: [id])
  
  items         OrderItem[]
  createdAt     DateTime    @default(now())
}

// 8. Позиции заказа
model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id])
  
  productName String
  quantity    Int
  price       Int
  modifiers   String?
}

// 9. Баннеры (Слайдер на главной)
model Banner {
  id        String   @id @default(cuid())
  image     String   // Ссылка на фото
  link      String?  // Ссылка куда ведет (опционально)
  sortIndex Int      @default(0)
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  createdAt DateTime @default(now())
}